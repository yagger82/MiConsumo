datasource db {
provider = "postgresql"
url = env("DATABASE_URL")
}
generator client {
provider = "prisma-client-js"
}


model Usuarios {
id Int @id @default(autoincrement())
nombre String @db.VarChar(50)
apellido String @db.VarChar(50)
nro_doc String @db.VarChar(20) @unique
email String @unique
direccion String @db.VarChar(100)
password_hash String
creado_en DateTime @default(now())
//1:N hacia Categorias
categorias Categorias[]
movimientos Movimientos[]
presupuestos Presupuestos[] @relation("UsuarioPresupuestos")
}

model Categorias {
id Int @id @default(autoincrement())
descripcion String
usuario Usuarios @relation(fields: [usuarioId], references: [id])
usuarioId Int
color_hex String

movimientos Movimientos[]
presupuestos Presupuestos[]
}

// Postgres/MySQL/SQL Server/Mongo/SQLite
enum TipoMov {
  E   // Entrada
  I   // Salida (o Ingreso/Egreso, como prefieras)
}

model Movimientos {
id Int @id @default(autoincrement())
usuarioMov Usuarios @relation(fields: [usuarioMovId], references: [id])
categoriaMov Categorias @relation(fields: [categoriaMovId], references: [id])
usuarioMovId Int
categoriaMovId Int
fechamov DateTime @default(now())
monto Decimal  @db.Decimal(14, 2)  // ≈ NUMERIC(14,2)
tipomov TipoMov @default(E) @map("tipo_mov")
nota String @db.VarChar(255)
creado_en DateTime @default(now())

}


model Presupuestos{
id Int @id @default(autoincrement())
usuarioPres Usuarios @relation("UsuarioPresupuestos", fields: [usuarioPresId], references: [id])
categoriaPres Categorias @relation(fields: [categoriaPresId], references: [id])
usuarioPresId Int
categoriaPresId Int
// Guardamos el mes y año como string en formato "YYYY-MM" para facilitar consultas
//@db.VarChar(7)
anio_mes String @db.VarChar(7) // Formato "YYYY-MM"
monto_max Decimal @db.Decimal(14, 2)
creado_en DateTime @default(now())
}

